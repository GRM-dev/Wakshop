<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.grmdev.wakshop.gui.controllers.MainViewController">
   <content>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <top>
            <ImageView fitHeight="130.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" maxWidth="-Infinity" prefWidth="300.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" top="40.0" />
               </BorderPane.margin>
               <children>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#manageButton_Click" text="Manage Your Saved Workshops" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#createButton_Click" text="Create Workshop">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#joinButton_Click" text="Join Workshop">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </center>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
              <buttons>
                  <Button mnemonicParsing="false" onAction="#settingsButton_Click" text="Settings" ButtonBar.buttonData="LEFT" />
                  <Button mnemonicParsing="false" onAction="#logoutButton_Click" text="Logout" ButtonBar.buttonData="BACK_PREVIOUS"/>
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#exitButton_Click" text="Exit" ButtonBar.buttonData="CANCEL_CLOSE"/>
              </buttons>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </content>
</ScrollPane>
